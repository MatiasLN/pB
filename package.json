{
	"name": "pB",
	"version": "0.0.5",
	"description": "A GUI program for backing up a Plex server",
	"author": "Matias Lie-Nielsen",
	"license": "MIT",
	"engines": {
		"node": ">=9.0.0",
		"npm": ">=5.0.0",
		"yarn": ">=1.0.0"
	},
	"browserslist": [
		"last 4 versions"
	],
	"main": "main.js",
	"homepage": "./",
	"scripts": {
		"prod": "cross-env NODE_ENV=production webpack --mode production --config webpack.build.config.js && electron --noDevServer .",
		"start": "cross-env NODE_ENV=development webpack-dev-server --hot --info false --host 0.0.0.0 --config=./webpack.dev.config.js --mode development",
		"build": "cross-env NODE_ENV=production webpack --config webpack.build.config.js --mode production",
		"dist": "yarn build && electron-builder build --win --publish never",
		"deploy": "yarn build && electron-builder build --win --publish always"
	},
	"build": {
		"appId": "com.pb",
		"productName": "pB",
		"directories": {
			"output": "build"
		},
		"win": {
			"target": "nsis",
			"icon": "",
			"publish": {
				"provider": "github",
				"repo": "pB",
				"owner": "MatiasLN",
				"releaseType": "release"
			}
		},
		"publish": {
			"provider": "github",
			"owner": "MatiasLN"
		},
		"extraResources": [
			"assets/exe/*"
		]
	},
	"dependencies": {
		"electron-json-storage": "^4.6.0",
		"electron-updater": "^5.3.0",
		"ps-man": "^1.1.8",
		"react": "^16.13.1",
		"react-dom": "^16.13.1"
	},
	"devDependencies": {
		"@babel/core": "^7.9.6",
		"@babel/preset-env": "^7.9.6",
		"@babel/preset-react": "^7.9.4",
		"babel-loader": "^8.1.0",
		"babili-webpack-plugin": "^0.1.2",
		"cross-env": "^7.0.2",
		"css-loader": "^3.5.3",
		"electron": "^9.0.5",
		"electron-builder": "^23.6.0",
		"electron-devtools-installer": "^3.0.0",
		"file-loader": "^6.0.0",
		"html-webpack-plugin": "^4.3.0",
		"mini-css-extract-plugin": "^0.9.0",
		"style-loader": "^1.2.0",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11",
		"webpack-dev-server": "^3.10.3"
	}
}
